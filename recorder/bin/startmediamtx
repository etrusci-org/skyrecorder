#!/usr/bin/env bash
BIN_DIR=$(dirname $(readlink -f $BASH_SOURCE))
APP_DIR=$(realpath ${BIN_DIR}/..)
###############################################


MEDIAMTX_BIN=${BIN_DIR}/mediamtx/mediamtx
MEDIAMTX_CONF=${BIN_DIR}/mediamtx/skyrecorder.yml

cd $APP_DIR

source ${BIN_DIR}/setcamctrl

$MEDIAMTX_BIN $MEDIAMTX_CONF
