#!/usr/bin/env bash

RTSP_PORT=$1
MTX_PATH=$2

ffmpeg \
    -loglevel warning \
    -stats \
    -f v4l2 \
    -i /dev/video0 \
    -pix_fmt yuv420p \
    -preset ultrafast \
    -b:v 600k \
    -vf "drawtext=text='skyrecorder\ %{localtime\:%F\ %T}':fontcolor=white@0.5:fontsize=12:x=w-text_w-5:y=h-text_h-5" \
    -f rtsp \
    rtsp://localhost:$RTSP_PORT/$MTX_PATH
