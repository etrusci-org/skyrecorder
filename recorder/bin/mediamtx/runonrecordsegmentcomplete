#!/usr/bin/env bash

#=== CONF

RSYNC_DEST=elity:/mnt/stor1/skyrecorder/rec/
PUSH_NOTIFICATION_URL=


#=== MAGIC

rsync \
    --progress \
    --human-readable \
    --compress \
    --times \
    ./rec/*.mp4 $RSYNC_DEST


if [ "$PUSH_NOTIFICATION_URL" != "" ]
then
    curl -o /dev/null -s "${PUSH_NOTIFICATION_URL}"
fi
